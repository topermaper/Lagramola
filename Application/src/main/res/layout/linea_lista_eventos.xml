<?xml version="1.0" encoding="utf-8"?>

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:cacheColorHint="#00000000" >

    <TextView
        android:id="@+id/tvSeparator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/negro"
        android:background="@color/separator_list"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"/>


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignTop="@id/ivCartel"
        android:layout_toRightOf="@id/ivCartel"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

	<ImageView
	    android:id="@+id/ivCartel"
        android:layout_width="@dimen/picturelist"
        android:layout_height="@dimen/picturelist"
        android:layout_below="@+id/tvSeparator"
        android:layout_alignParentLeft="true"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitulo"
        android:layout_toRightOf="@id/ivCartel"
        android:singleLine="true"    
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingRight="5dp"/>
 
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFecha"
        android:layout_toRightOf="@id/ivCartel"
        android:singleLine="false"
        android:paddingRight="5dp"/>
    
    <TextView
        android:id="@+id/tvHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvFecha"
        android:layout_toRightOf="@id/tvFecha"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="5dp"/>
           
</RelativeLayout>
